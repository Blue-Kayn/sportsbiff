<% content_for :title, "Sign Up - SportsBiff" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-blue-900 to-purple-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <%= link_to root_path do %>
        <span class="text-4xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">SportsBiff</span>
      <% end %>
      <h2 class="mt-6 text-2xl font-bold text-white">Create your free account</h2>
      <p class="mt-2 text-gray-400">
        Already have an account? <%= link_to "Sign in", new_user_session_path, class: "text-blue-400 hover:text-blue-300" %>
      </p>
    </div>

    <div class="bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-700">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full bg-gray-700 text-white border border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
          <%= f.password_field :password,
              autocomplete: "new-password",
              class: "w-full bg-gray-700 text-white border border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-500" %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              class: "w-full bg-gray-700 text-white border border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-500" %>
        </div>

        <div>
          <%= f.submit "Create Account", class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-3 rounded-lg font-medium transition cursor-pointer" %>
        </div>

        <p class="text-xs text-gray-500 text-center">
          By signing up, you agree that gambling involves risk and you should bet responsibly. 21+
        </p>
      <% end %>
    </div>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-400">
        Get <span class="text-white font-medium">10 free queries</span> per day
      </p>
    </div>
  </div>
</div>
