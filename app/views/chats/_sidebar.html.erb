<div class="sidebar">
  <!-- New Chat Button -->
  <div class="sidebar-header">
    <%= link_to chats_path, data: { turbo_method: :post }, class: "new-chat-btn" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      <span>New Chat</span>
    <% end %>
  </div>

  <div class="flex-1 overflow-y-auto">
    <!-- Team Channels Section -->
    <% if team_channels.present? %>
      <div class="px-4 pt-4 pb-2">
        <div class="card-header" style="margin-bottom: 8px; justify-content: flex-start;">
          <svg class="card-header-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          Your Teams
        </div>
      </div>
      <% team_channels.each do |channel| %>
        <% team = channel.team %>
        <% is_active = defined?(current_chat) && channel == current_chat %>
        <%= link_to channel, class: "team-item #{is_active ? 'active' : ''}" do %>
          <% if team&.logo_url.present? %>
            <img src="<%= team.logo_url %>"
                 alt="<%= team.name %>"
                 class="team-item-logo">
          <% else %>
            <div class="team-item-logo" style="background: <%= team&.primary_color || 'var(--accent-blue)' %>; display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 14px;">
              <%= team&.name&.first || '?' %>
            </div>
          <% end %>
          <div class="team-item-info">
            <div class="team-item-name"><%= team&.name || 'Team' %></div>
            <div class="team-item-league"><%= team&.sport %></div>
          </div>
        <% end %>
      <% end %>
    <% end %>

    <!-- Regular Chats Section -->
    <div class="px-4 pt-4 pb-2">
      <div class="card-header" style="margin-bottom: 8px; justify-content: flex-start;">
        <svg class="card-header-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        Conversations
      </div>
    </div>
    <% chats.each do |chat| %>
      <% is_active = defined?(current_chat) && chat == current_chat %>
      <%= link_to chat, class: "team-item #{is_active ? 'active' : ''}" do %>
        <div style="width: 32px; height: 32px; border-radius: 8px; background: var(--accent-blue); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
          <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
          </svg>
        </div>
        <div class="team-item-info">
          <div class="team-item-name"><%= chat.display_title %></div>
          <div class="team-item-league"><%= time_ago_in_words(chat.updated_at) %> ago</div>
        </div>
      <% end %>
    <% end %>

    <% if chats.empty? && team_channels.empty? %>
      <div class="px-4 py-8 text-center text-sm" style="color: var(--text-muted);">
        No chats yet. Start a new conversation!
      </div>
    <% elsif chats.empty? %>
      <div class="px-4 py-4 text-center text-sm" style="color: var(--text-muted);">
        No conversations yet.
      </div>
    <% end %>
  </div>
</div>
