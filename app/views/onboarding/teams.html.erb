<% content_for :title, "Pick Your Teams - SportsBiff" %>

<div class="text-center mb-8">
  <h1 class="text-3xl font-bold text-white mb-2">Pick Your Teams</h1>
  <p class="text-gray-400">Select the teams you want to follow. We'll prioritize news and updates for these teams.</p>
</div>

<!-- Progress indicator -->
<div class="flex items-center justify-center gap-2 mb-8">
  <div class="w-8 h-8 rounded-full bg-green-600 flex items-center justify-center text-white">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>
  </div>
  <div class="w-12 h-1 bg-blue-600"></div>
  <div class="w-8 h-8 rounded-full bg-blue-600 flex items-center justify-center text-white font-bold">2</div>
  <div class="w-12 h-1 bg-gray-700"></div>
  <div class="w-8 h-8 rounded-full bg-gray-700 flex items-center justify-center text-gray-400 font-bold">3</div>
</div>

<%= form_with url: onboarding_save_teams_path, method: :post, class: "space-y-8" do |f| %>
  <% @sports.each do |sport| %>
    <div class="bg-gray-800 rounded-xl p-6">
      <h2 class="text-xl font-semibold text-white mb-4 flex items-center gap-2">
        <span><%= sport_emoji(sport) %></span>
        <span><%= sport_display_name(sport) %></span>
      </h2>

      <div class="max-h-72 overflow-y-auto border border-gray-700 rounded-lg p-3">
        <div class="flex flex-wrap gap-2">
          <% @teams_by_sport[sport]&.each do |team| %>
            <label class="relative cursor-pointer" style="width: 56px;">
              <input type="checkbox"
                     name="team_ids[]"
                     value="<%= team.api_id %>"
                     class="peer sr-only"
                     <%= 'checked' if @selected_team_ids.include?(team.api_id) %>>
              <div class="bg-gray-700 border-2 border-gray-600 rounded-lg p-1 text-center transition-all
                          peer-checked:border-blue-500 peer-checked:bg-blue-500/20
                          hover:border-gray-500 h-14 flex flex-col items-center justify-center"
                   title="<%= team.name %>">
                <% if team.logo_url.present? %>
                  <img src="<%= team.logo_url %>"
                       alt="<%= team.name %>"
                       style="width: 28px; height: 28px; object-fit: contain;">
                <% else %>
                  <span class="text-xs text-gray-400"><%= team.name.split.map(&:first).join %></span>
                <% end %>
                <div class="text-[9px] font-medium text-gray-300 truncate w-full mt-0.5"><%= team.name.split.last %></div>
              </div>
              <div class="absolute -top-1 -right-1 w-4 h-4 rounded-full bg-blue-500 items-center justify-center hidden peer-checked:flex">
                <svg class="w-2.5 h-2.5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
            </label>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="flex gap-4 pt-4">
    <%= link_to "Back", onboarding_path, class: "flex-1 bg-gray-700 hover:bg-gray-600 text-white font-semibold py-3 px-6 rounded-lg transition text-center" %>
    <button type="submit" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition">
      Continue
    </button>
  </div>
<% end %>
