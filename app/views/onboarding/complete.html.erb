  <h1 class="text-3xl font-bold text-white mb-2">You're All Set!</h1>
  <p class="text-gray-400">Your personalized sports experience is ready.</p>
</div>

<!-- Progress indicator -->
<div class="flex items-center justify-center gap-2 mb-8">
  <div class="w-8 h-8 rounded-full bg-green-600 flex items-center justify-center text-white">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>
  </div>
  <div class="w-12 h-1 bg-green-600"></div>
  <div class="w-8 h-8 rounded-full bg-green-600 flex items-center justify-center text-white">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>
  </div>
  <div class="w-12 h-1 bg-green-600"></div>
  <div class="w-8 h-8 rounded-full bg-green-600 flex items-center justify-center text-white">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
    </svg>
  </div>
</div>

<!-- Summary -->
<div class="bg-gray-800 rounded-xl p-6 mb-8">
  <h2 class="text-lg font-semibold text-white mb-4">Your Teams</h2>

  <div class="space-y-4">
    <% current_user.favorite_sports.each do |sport| %>
      <% teams = current_user.teams_for_sport(sport) %>
      <% if teams.any? %>
        <div>
          <div class="text-sm text-gray-400 mb-2 flex items-center gap-2">
            <span><%= sport_emoji(sport) %></span>
            <span><%= sport_display_name(sport) %></span>
          </div>
          <div class="flex flex-wrap gap-2">
            <% teams.each do |team| %>
              <span class="bg-gray-700 text-white px-3 py-1 rounded-full text-sm">
                <%= team["team_name"] %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<!-- What's next -->
<div class="bg-blue-600/10 border border-blue-500/30 rounded-xl p-6 mb-8">
  <h2 class="text-lg font-semibold text-white mb-3">What you can do now:</h2>
  <ul class="space-y-2 text-gray-300">
    <li class="flex items-start gap-2">
      <svg class="w-5 h-5 text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <span>Ask about your teams: "How are the Giants doing?"</span>
    </li>
    <li class="flex items-start gap-2">
      <svg class="w-5 h-5 text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <span>Get game schedules and scores</span>
    </li>
    <li class="flex items-start gap-2">
      <svg class="w-5 h-5 text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <span>Check market intelligence on odds and lines</span>
    </li>
    <li class="flex items-start gap-2">
      <svg class="w-5 h-5 text-blue-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <span>Stay updated with news about your teams</span>
    </li>
  </ul>
</div>

<%= link_to onboarding_finish_path, class: "block w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition text-center" do %>
  Get Started
<% end %>
