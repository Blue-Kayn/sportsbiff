<% content_for :title, "Sign In - SportsBiff" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-blue-900 to-purple-900 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <%= link_to root_path do %>
        <span class="text-4xl font-bold bg-gradient-to-r from-blue-400 to-purple-500 bg-clip-text text-transparent">SportsBiff</span>
      <% end %>
      <h2 class="mt-6 text-2xl font-bold text-white">Sign in to your account</h2>
      <p class="mt-2 text-gray-400">
        Or <%= link_to "create a free account", new_user_registration_path, class: "text-blue-400 hover:text-blue-300" %>
      </p>
    </div>

    <div class="bg-gray-800 rounded-xl shadow-xl p-8 border border-gray-700">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "w-full bg-gray-700 text-white border border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-500" %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-300 mb-2" %>
          <%= f.password_field :password,
              autocomplete: "current-password",
              class: "w-full bg-gray-700 text-white border border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent placeholder-gray-500" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 bg-gray-700 border-gray-600 rounded focus:ring-blue-500" %>
              <%= f.label :remember_me, class: "ml-2 text-sm text-gray-400" %>
            </div>
            <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-blue-400 hover:text-blue-300" %>
            <% end %>
          </div>
        <% end %>

        <div>
          <%= f.submit "Sign In", class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-3 rounded-lg font-medium transition cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
